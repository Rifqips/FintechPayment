<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="io.github.rifqips.fintechpayment">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_icon"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:supportsRtl="true">

        <activity android:name=".fragment.SettingFragment"
            tools:ignore="Instantiatable" />
        <activity android:name=".fragment.PaymentFragment"
            tools:ignore="Instantiatable" />
        <activity android:name=".fragment.HistoryFragment"
            tools:ignore="Instantiatable" />
        <activity android:name=".fragment.HomeFragment"
            tools:ignore="Instantiatable" />
        <activity android:name=".activity.PaymentActivity" />
        <activity android:name=".activity.ProfileActivity" />
        <activity android:name=".activity.RegisterActivity" />
        <activity android:name=".activity.RecoveryActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity"/>
    </application>

</manifest>