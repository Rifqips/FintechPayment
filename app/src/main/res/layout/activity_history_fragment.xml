                    android:textSize="15dp"
                    android:layout_below="@+id/title_kitaBisa"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BERHASIL"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <RelativeLayout
